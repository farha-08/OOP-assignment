Where to put it (Eclipse)

Create a new class:

Package: ui

Class name: JobBrowserModule

So file becomes:

src/ui/JobBrowserModule.java

Then paste this code:

package ui;

import javax.swing.*;
import javax.swing.border.EmptyBorder;
import javax.swing.event.DocumentEvent;
import javax.swing.event.DocumentListener;
import javax.swing.event.ListSelectionEvent;
import javax.swing.table.DefaultTableModel;
import javax.swing.table.TableRowSorter;
import java.awt.*;
import java.util.ArrayList;
import java.util.List;
import java.util.Locale;
import java.util.regex.Pattern;

public class JobBrowserModule {

    public static void main(String[] args) {
        SwingUtilities.invokeLater(() -> {
            UIManager.put("swing.boldMetal", Boolean.FALSE);

            String[] choices = {"Student Job Browser", "Company Own Jobs Browser"};
            int pick = JOptionPane.showOptionDialog(
                    null,
                    "Which screen do you want to run?",
                    "Job Browser Module",
                    JOptionPane.DEFAULT_OPTION,
                    JOptionPane.QUESTION_MESSAGE,
                    null,
                    choices,
                    choices[0]
            );

            if (pick == 1) {
                JFrame f = new JFrame("Company - Own Jobs Browser");
                f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
                f.setSize(1100, 650);
                f.setLocationRelativeTo(null);

                // IMPORTANT: must match a company in mock jobs (e.g., "ABC Tech")
                f.setContentPane(new CompanyOwnJobsPanel("ABC Tech"));
                f.setVisible(true);
            } else {
                JFrame f = new JFrame("Student - Job Browser (All Companies)");
                f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
                f.setSize(1100, 600);
                f.setLocationRelativeTo(null);

                f.setContentPane(new StudentJobBrowserPanel());
                f.setVisible(true);
            }
        });
    }

    // ============================
    // STUDENT: Job Browser (All Companies)
    // ============================
    static class StudentJobBrowserPanel extends JPanel {

        private final JTextField txtSearch = new JTextField(18);
        private final JComboBox<String> cmbType = new JComboBox<>(new String[]{"All", "FULL_TIME", "INTERNSHIP"});
        private final JComboBox<String> cmbMode = new JComboBox<>(new String[]{"All", "ONSITE", "REMOTE", "HYBRID"});
        private final JComboBox<String> cmbStatus = new JComboBox<>(new String[]{"All", "OPEN", "CLOSED"});

        private final JButton btnApply = new JButton("Apply");
        private final JButton btnClear = new JButton("Clear");

        private final DefaultTableModel model = new DefaultTableModel(
                new Object[]{"ID", "Title", "Company", "Location", "Type", "Mode", "Min CGPA", "Status"}, 0
        ) {
            public boolean isCellEditable(int r, int c) { return false; }
        };

        private final JTable table = new JTable(model);
        private final TableRowSorter<DefaultTableModel> sorter = new TableRowSorter<>(model);

        StudentJobBrowserPanel() {
            setLayout(new BorderLayout(0, 12));
            setBackground(new Color(245, 247, 250));
            setBorder(new EmptyBorder(18, 18, 18, 18));

            add(buildHeader("Job Browser (All Companies)",
                    "Search and filter all available job offers."), BorderLayout.NORTH);

            JPanel filtersCard = buildFiltersCard();
            add(filtersCard, BorderLayout.CENTER);

            JPanel tableCard = new JPanel(new BorderLayout());
            tableCard.setBackground(Color.WHITE);
            tableCard.setBorder(new EmptyBorder(12, 12, 12, 12));

            table.setRowHeight(26);
            table.getTableHeader().setReorderingAllowed(false);
            table.setRowSorter(sorter);

            JScrollPane sp = new JScrollPane(table);
            sp.setBorder(BorderFactory.createLineBorder(new Color(230, 235, 242)));
            tableCard.add(sp, BorderLayout.CENTER);

            add(tableCard, BorderLayout.SOUTH);

            btnApply.addActionListener(e -> refresh());
            btnClear.addActionListener(e -> {
                txtSearch.setText("");
                cmbType.setSelectedIndex(0);
                cmbMode.setSelectedIndex(0);
                cmbStatus.setSelectedIndex(0);
                refresh();
            });

            // Live search for a more "pro" feel
            txtSearch.getDocument().addDocumentListener(new DocumentListener() {
                public void insertUpdate(DocumentEvent e) { liveFilter(); }
                public void removeUpdate(DocumentEvent e) { liveFilter(); }
                public void changedUpdate(DocumentEvent e) { liveFilter(); }
            });

            refresh();
        }

        private JPanel buildHeader(String title, String subtitle) {
            JPanel card = new JPanel(new BorderLayout());
            card.setBackground(Color.WHITE);
            card.setBorder(new EmptyBorder(14, 14, 14, 14));

            JLabel t = new JLabel(title);
            t.setFont(new Font("SansSerif", Font.BOLD, 18));

            JLabel s = new JLabel(subtitle);
            s.setFont(new Font("SansSerif", Font.PLAIN, 12));
            s.setForeground(new Color(110, 110, 110));

            JPanel left = new JPanel();
            left.setOpaque(false);
            left.setLayout(new BoxLayout(left, BoxLayout.Y_AXIS));
            left.add(t);
            left.add(Box.createVerticalStrut(4));
            left.add(s);

            card.add(left, BorderLayout.WEST);
            return card;
        }

        private JPanel buildFiltersCard() {
            JPanel wrap = new JPanel(new BorderLayout());
            wrap.setBackground(Color.WHITE);
            wrap.setBorder(new EmptyBorder(12, 12, 12, 12));

            JPanel row = new JPanel(new FlowLayout(FlowLayout.LEFT, 10, 0));
            row.setOpaque(false);

            row.add(new JLabel("Search:"));
            styleField(txtSearch);
            row.add(txtSearch);

            row.add(new JLabel("Type:"));
            styleCombo(cmbType, 140);
            row.add(cmbType);

            row.add(new JLabel("Mode:"));
            styleCombo(cmbMode, 140);
            row.add(cmbMode);

            row.add(new JLabel("Status:"));
            styleCombo(cmbStatus, 120);
            row.add(cmbStatus);

            styleBtn(btnApply);
            styleBtn(btnClear);
            row.add(btnApply);
            row.add(btnClear);

            wrap.add(row, BorderLayout.WEST);
            return wrap;
        }

        void refresh() {
            model.setRowCount(0);

            String search = txtSearch.getText().trim();
            JobType type = parseType((String) cmbType.getSelectedItem());
            WorkMode mode = parseMode((String) cmbMode.getSelectedItem());
            JobStatus status = parseStatus((String) cmbStatus.getSelectedItem());

            List<JobOffer> jobs = MockJobService.filterJobs(search, type, mode, status, null);

            for (JobOffer j : jobs) {
                model.addRow(new Object[]{
                        j.id,
                        j.title,
                        j.companyName,
                        j.location,
                        j.type.name(),
                        j.mode.name(),
                        String.format("%.1f", j.minCgpa),
                        j.status.name()
                });
            }
        }

        private void liveFilter() {
            String t = txtSearch.getText().trim();
            if (t.isEmpty()) {
                sorter.setRowFilter(null);
            } else {
                sorter.setRowFilter(RowFilter.regexFilter("(?i)" + Pattern.quote(t)));
            }
        }

        private JobType parseType(String s) {
            if (s == null || s.equalsIgnoreCase("All")) return null;
            try { return JobType.valueOf(s); } catch (Exception e) { return null; }
        }

        private WorkMode parseMode(String s) {
            if (s == null || s.equalsIgnoreCase("All")) return null;
            try { return WorkMode.valueOf(s); } catch (Exception e) { return null; }
        }

        private JobStatus parseStatus(String s) {
            if (s == null || s.equalsIgnoreCase("All")) return null;
            try { return JobStatus.valueOf(s); } catch (Exception e) { return null; }
        }

        private void styleField(JTextField f) {
            f.setPreferredSize(new Dimension(180, 30));
            f.setBorder(BorderFactory.createCompoundBorder(
                    BorderFactory.createLineBorder(new Color(210, 215, 223)),
                    new EmptyBorder(6, 8, 6, 8)
            ));
        }

        private void styleCombo(JComboBox<?> c, int w) {
            c.setPreferredSize(new Dimension(w, 30));
            c.setCursor(Cursor.getPredefinedCursor(Cursor.HAND_CURSOR));
        }

        private void styleBtn(JButton b) {
            b.setFocusPainted(false);
            b.setCursor(Cursor.getPredefinedCursor(Cursor.HAND_CURSOR));
            b.setBorder(BorderFactory.createEmptyBorder(7, 14, 7, 14));
        }
    }

    // ============================
    // COMPANY: Own Jobs Browser
    // ============================
    static class CompanyOwnJobsPanel extends JPanel {

        private final String companyName;

        private final JTextField txtSearch = new JTextField(16);
        private final JComboBox<String> cmbStatus = new JComboBox<>(new String[]{"All", "OPEN", "CLOSED"});
        private final JComboBox<String> cmbType = new JComboBox<>(new String[]{"All", "FULL_TIME", "INTERNSHIP"});
        private final JComboBox<String> cmbMode = new JComboBox<>(new String[]{"All", "ONSITE", "REMOTE", "HYBRID"});
        private final JButton btnApply = new JButton("Apply");
        private final JButton btnClear = new JButton("Clear");

        private final DefaultTableModel model = new DefaultTableModel(
                new Object[]{"ID", "Title", "Location", "Type", "Mode", "Min CGPA", "Status"}, 0
        ) {
            public boolean isCellEditable(int r, int c) { return false; }
        };

        private final JTable table = new JTable(model);

        // Right-side details
        private final JLabel vTitle = new JLabel("-");
        private final JLabel vLocation = new JLabel("-");
        private final JLabel vType = new JLabel("-");
        private final JLabel vMode = new JLabel("-");
        private final JLabel vCgpa = new JLabel("-");
        private final JLabel vStatus = new JLabel("-");

        private final JButton btnApplicants = new JButton("Applicants (mock)");
        private final JButton btnViewDetails = new JButton("View Details");
        private final JButton btnDelete = new JButton("Delete");

        CompanyOwnJobsPanel(String companyName) {
            this.companyName = companyName;

            setLayout(new BorderLayout(0, 12));
            setBackground(new Color(245, 247, 250));
            setBorder(new EmptyBorder(18, 18, 18, 18));

            add(buildHeader("My Company Jobs", "Showing offers created by: " + companyName), BorderLayout.NORTH);

            JSplitPane split = new JSplitPane(JSplitPane.HORIZONTAL_SPLIT);
            split.setBorder(null);
            split.setResizeWeight(0.72);
            split.setDividerSize(6);

            // Left: filters + table
            JPanel left = new JPanel(new BorderLayout(0, 10));
            left.setOpaque(false);
            left.add(buildFiltersCard(), BorderLayout.NORTH);

            table.setRowHeight(26);
            table.getTableHeader().setReorderingAllowed(false);

            JScrollPane sp = new JScrollPane(table);
            sp.setBorder(BorderFactory.createLineBorder(new Color(230, 235, 242)));
            left.add(sp, BorderLayout.CENTER);

            split.setLeftComponent(left);
            split.setRightComponent(buildDetailsCard());

            add(split, BorderLayout.CENTER);
            add(buildBottomActions(), BorderLayout.SOUTH);

            btnApply.addActionListener(e -> refresh());
            btnClear.addActionListener(e -> {
                txtSearch.setText("");
                cmbStatus.setSelectedIndex(0);
                cmbType.setSelectedIndex(0);
                cmbMode.setSelectedIndex(0);
                refresh();
            });

            btnViewDetails.addActionListener(e -> showDetailsDialog());
            btnApplicants.addActionListener(e -> JOptionPane.showMessageDialog(this,
                    "Applicants list is mock in this frontend-only demo.",
                    "Applicants (mock)", JOptionPane.INFORMATION_MESSAGE));
            btnDelete.addActionListener(e -> deleteSelected());

            table.getSelectionModel().addListSelectionListener(this::onRowSelected);

            refresh();
        }

        private JPanel buildHeader(String title, String subtitle) {
            JPanel card = new JPanel(new BorderLayout());
            card.setBackground(Color.WHITE);
            card.setBorder(new EmptyBorder(14, 14, 14, 14));

            JLabel t = new JLabel(title);
            t.setFont(new Font("SansSerif", Font.BOLD, 18));

            JLabel s = new JLabel(subtitle);
            s.setFont(new Font("SansSerif", Font.PLAIN, 12));
            s.setForeground(new Color(110, 110, 110));

            JPanel left = new JPanel();
            left.setOpaque(false);
            left.setLayout(new BoxLayout(left, BoxLayout.Y_AXIS));
            left.add(t);
            left.add(Box.createVerticalStrut(4));
            left.add(s);

            card.add(left, BorderLayout.WEST);
            return card;
        }

        private JPanel buildFiltersCard() {
            JPanel wrap = new JPanel(new BorderLayout());
            wrap.setBackground(Color.WHITE);
            wrap.setBorder(new EmptyBorder(12, 12, 12, 12));

            JPanel row = new JPanel(new FlowLayout(FlowLayout.LEFT, 10, 0));
            row.setOpaque(false);

            row.add(new JLabel("Search:"));
            styleField(txtSearch);
            row.add(txtSearch);

            row.add(new JLabel("Status:"));
            styleCombo(cmbStatus, 120);
            row.add(cmbStatus);

            row.add(new JLabel("Type:"));
            styleCombo(cmbType, 140);
            row.add(cmbType);

            row.add(new JLabel("Mode:"));
            styleCombo(cmbMode, 140);
            row.add(cmbMode);

            styleBtn(btnApply);
            styleBtn(btnClear);
            row.add(btnApply);
            row.add(btnClear);

            wrap.add(row, BorderLayout.WEST);
            return wrap;
        }

        private JPanel buildDetailsCard() {
            JPanel card = new JPanel(new BorderLayout(0, 10));
            card.setBackground(Color.WHITE);
            card.setBorder(new EmptyBorder(14, 14, 14, 14));

            JLabel t = new JLabel("Selected Job Details");
            t.setFont(new Font("SansSerif", Font.BOLD, 14));
            card.add(t, BorderLayout.NORTH);

            JPanel grid = new JPanel(new GridBagLayout());
            grid.setOpaque(false);
            GridBagConstraints gc = new GridBagConstraints();
            gc.insets = new Insets(8, 2, 8, 2);
            gc.anchor = GridBagConstraints.WEST;
            gc.gridx = 0;
            gc.gridy = 0;

            addKV(grid, gc, "Title", vTitle);
            addKV(grid, gc, "Location", vLocation);
            addKV(grid, gc, "Type", vType);
            addKV(grid, gc, "Mode", vMode);
            addKV(grid, gc, "Min CGPA", vCgpa);
            addKV(grid, gc, "Status", vStatus);

            Font valFont = new Font("SansSerif", Font.BOLD, 12);
            vTitle.setFont(valFont);
            vLocation.setFont(valFont);
            vType.setFont(valFont);
            vMode.setFont(valFont);
            vCgpa.setFont(valFont);
            vStatus.setFont(valFont);

            JLabel tip = new JLabel("Tip: select a row to preview details.");
            tip.setForeground(new Color(110, 110, 110));
            tip.setFont(new Font("SansSerif", Font.PLAIN, 12));

            card.add(grid, BorderLayout.CENTER);
            card.add(tip, BorderLayout.SOUTH);

            return card;
        }

        private JPanel buildBottomActions() {
            JPanel bottom = new JPanel(new BorderLayout());
            bottom.setOpaque(false);

            JPanel actions = new JPanel(new FlowLayout(FlowLayout.RIGHT, 10, 0));
            actions.setOpaque(false);

            styleBtn(btnApplicants);
            styleBtn(btnViewDetails);
            styleBtn(btnDelete);

            btnDelete.setEnabled(false);
            btnViewDetails.setEnabled(false);

            actions.add(btnApplicants);
            actions.add(btnViewDetails);
            actions.add(btnDelete);

            bottom.add(actions, BorderLayout.EAST);
            return bottom;
        }

        void refresh() {
            model.setRowCount(0);

            String search = txtSearch.getText().trim();
            JobStatus status = parseStatus((String) cmbStatus.getSelectedItem());
            JobType type = parseType((String) cmbType.getSelectedItem());
            WorkMode mode = parseMode((String) cmbMode.getSelectedItem());

            List<JobOffer> jobs = MockJobService.filterJobs(search, type, mode, status, companyName);
            for (JobOffer j : jobs) {
                model.addRow(new Object[]{
                        j.id, j.title, j.location,
                        j.type.name(), j.mode.name(),
                        String.format("%.1f", j.minCgpa),
                        j.status.name()
                });
            }

            clearDetails();
        }

        private void onRowSelected(ListSelectionEvent e) {
            if (e.getValueIsAdjusting()) return;

            int row = table.getSelectedRow();
            boolean has = row >= 0;

            btnDelete.setEnabled(has);
            btnViewDetails.setEnabled(has);

            if (!has) {
                clearDetails();
                return;
            }

            vTitle.setText(String.valueOf(model.getValueAt(row, 1)));
            vLocation.setText(String.valueOf(model.getValueAt(row, 2)));
            vType.setText(String.valueOf(model.getValueAt(row, 3)));
            vMode.setText(String.valueOf(model.getValueAt(row, 4)));
            vCgpa.setText(String.valueOf(model.getValueAt(row, 5)));
            vStatus.setText(String.valueOf(model.getValueAt(row, 6)));
        }

        private void clearDetails() {
            vTitle.setText("-");
            vLocation.setText("-");
            vType.setText("-");
            vMode.setText("-");
            vCgpa.setText("-");
            vStatus.setText("-");
            btnDelete.setEnabled(false);
            btnViewDetails.setEnabled(false);
        }

        private void showDetailsDialog() {
            int row = table.getSelectedRow();
            if (row < 0) {
                JOptionPane.showMessageDialog(this, "Please select a job first.", "No selection", JOptionPane.WARNING_MESSAGE);
                return;
            }

            String msg = "Company: " + companyName + "\n"
                    + "Title: " + model.getValueAt(row, 1) + "\n"
                    + "Location: " + model.getValueAt(row, 2) + "\n"
                    + "Type: " + model.getValueAt(row, 3) + "\n"
                    + "Mode: " + model.getValueAt(row, 4) + "\n"
                    + "Min CGPA: " + model.getValueAt(row, 5) + "\n"
                    + "Status: " + model.getValueAt(row, 6);

            JOptionPane.showMessageDialog(this, msg, "Job Details", JOptionPane.INFORMATION_MESSAGE);
        }

        private void deleteSelected() {
            int row = table.getSelectedRow();
            if (row < 0) return;

            int id = Integer.parseInt(String.valueOf(model.getValueAt(row, 0)));

            int confirm = JOptionPane.showConfirmDialog(
                    this,
                    "Delete job ID " + id + "? (mock delete)",
                    "Confirm delete",
                    JOptionPane.YES_NO_OPTION
            );

            if (confirm != JOptionPane.YES_OPTION) return;

            MockJobService.deleteById(id);
            refresh();
        }

        private void addKV(JPanel p, GridBagConstraints gc, String key, JLabel val) {
            JLabel k = new JLabel(key);
            k.setFont(new Font("SansSerif", Font.PLAIN, 12));
            k.setForeground(new Color(80, 80, 80));

            gc.gridx = 0; gc.weightx = 0.4;
            p.add(k, gc);

            gc.gridx = 1; gc.weightx = 0.6;
            p.add(val, gc);

            gc.gridy++;
        }

        private JobType parseType(String s) {
            if (s == null || s.equalsIgnoreCase("All")) return null;
            try { return JobType.valueOf(s); } catch (Exception e) { return null; }
        }

        private WorkMode parseMode(String s) {
            if (s == null || s.equalsIgnoreCase("All")) return null;
            try { return WorkMode.valueOf(s); } catch (Exception e) { return null; }
        }

        private JobStatus parseStatus(String s) {
            if (s == null || s.equalsIgnoreCase("All")) return null;
            try { return JobStatus.valueOf(s); } catch (Exception e) { return null; }
        }

        private void styleField(JTextField f) {
            f.setPreferredSize(new Dimension(160, 30));
            f.setBorder(BorderFactory.createCompoundBorder(
                    BorderFactory.createLineBorder(new Color(210, 215, 223)),
                    new EmptyBorder(6, 8, 6, 8)
            ));
        }

        private void styleCombo(JComboBox<?> c, int w) {
            c.setPreferredSize(new Dimension(w, 30));
            c.setCursor(Cursor.getPredefinedCursor(Cursor.HAND_CURSOR));
        }

        private void styleBtn(JButton b) {
            b.setFocusPainted(false);
            b.setCursor(Cursor.getPredefinedCursor(Cursor.HAND_CURSOR));
            b.setBorder(BorderFactory.createEmptyBorder(7, 14, 7, 14));
        }
    }

    // ============================
    // Mock Models + Job Service (ONLY job-related)
    // ============================
    enum JobType { FULL_TIME, INTERNSHIP }
    enum WorkMode { ONSITE, REMOTE, HYBRID }
    enum JobStatus { OPEN, CLOSED }

    static class JobOffer {
        int id;
        String title;
        String companyName;
        String location;
        JobType type;
        WorkMode mode;
        double minCgpa;
        JobStatus status;

        JobOffer(int id, String title, String companyName, String location,
                 JobType type, WorkMode mode, double minCgpa, JobStatus status) {
            this.id = id;
            this.title = title;
            this.companyName = companyName;
            this.location = location;
            this.type = type;
            this.mode = mode;
            this.minCgpa = minCgpa;
            this.status = status;
        }
    }

    static class MockJobDB {
        static final List<JobOffer> jobs = new ArrayList<>();

        static {
            jobs.add(new JobOffer(1, "Software Developer", "ABC Tech", "Mauritius",
                    JobType.FULL_TIME, WorkMode.ONSITE, 3.0, JobStatus.OPEN));
            jobs.add(new JobOffer(2, "AI Intern", "Smart AI Ltd", "Remote",
                    JobType.INTERNSHIP, WorkMode.REMOTE, 2.8, JobStatus.OPEN));
            jobs.add(new JobOffer(3, "Web Developer", "WebWorks", "Mauritius",
                    JobType.FULL_TIME, WorkMode.HYBRID, 3.2, JobStatus.CLOSED));
            jobs.add(new JobOffer(4, "IT Support Intern", "ABC Tech", "Mauritius",
                    JobType.INTERNSHIP, WorkMode.ONSITE, 2.5, JobStatus.OPEN));
            jobs.add(new JobOffer(5, "Junior Backend Dev", "ABC Tech", "Remote",
                    JobType.FULL_TIME, WorkMode.REMOTE, 3.1, JobStatus.OPEN));
        }
    }

    static class MockJobService {

        static List<JobOffer> filterJobs(String search,
                                         JobType type,
                                         WorkMode mode,
                                         JobStatus status,
                                         String companyNameOrNull) {

            String s = (search == null) ? "" : search.trim().toLowerCase(Locale.ROOT);

            List<JobOffer> out = new ArrayList<>();
            for (JobOffer j : MockJobDB.jobs) {

                if (companyNameOrNull != null && !companyNameOrNull.trim().equalsIgnoreCase(j.companyName)) {
                    continue;
                }

                if (!s.isEmpty()) {
                    String hay = (safe(j.title) + " " + safe(j.companyName) + " " + safe(j.location))
                            .toLowerCase(Locale.ROOT);
                    if (!hay.contains(s)) continue;
                }

                if (type != null && j.type != type) continue;
                if (mode != null && j.mode != mode) continue;
                if (status != null && j.status != status) continue;

                out.add(j);
            }
            return out;
        }

        static void deleteById(int id) {
            MockJobDB.jobs.removeIf(j -> j.id == id);
        }

        private static String safe(String x) {
            return x == null ? "" : x.trim();
        }
    }
}